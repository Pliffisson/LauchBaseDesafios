{% extends "layout.njk" %}

{% block content%}

    <form class="card" method='POST' action="/teachers">
        <section class="image"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div>
                    <input type="text" name="name" placeholder="Digite seu nome completo">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="escolaridade">
                        <option value="medio">Ensino Médio Completo</option>
                        <option value="superior">Ensino Superio Completo</option>
                        <option value="mestrado">Mestrado</option>
                        <option value="doutorado">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="aula" checked="checked">
                        Presencial</span>
                    <span><input type="radio" name="aula">À distância</span>
                </div>
            </div>

            <div class="item">
                <div>Àrea de atuação</div>
                <div>
                    <input type="text" name="services" placeholder="Separe as matérias que o professor pode lecionar por virgula.">
                </div>
            </div>

            <button type="submit">Salvar</button>

        </section>
    </form>

{% endblock %}