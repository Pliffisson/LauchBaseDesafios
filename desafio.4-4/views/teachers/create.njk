{% extends 'layout.njk' %}

{% block content %}

    <form class="card" method='post' action='/teachers'>
        <section class="image" style='background: url(https://source.unsplash.com/collection/332741/500x500)
    no-repeat center center / cover'></section>
        <section class="details">
            <h3>Formulário de professores</h3>

            <div class="item">
                <div>Avatar_url</div>
                <div>
                    <input type="url" name="avatar_url" placeholder='http://'>
                </div>
            </div>

            <div class="item">
                <div>Professor(a)</div>
                <div>
                    <input type="text" name="name" placeholder='Nome completo'>
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="grau">
                        <option value="escolha" checked="checked">Escolha uma escolaridade</option>
                        <option value="medio">Ensino Médio Completo</option>
                        <option value="superior">Ensino Superior Completo</option>
                        <option value="mestrado">Mestrado</option>
                        <option value="doutorado">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="presencial">Presencial</span>
                    <span><input type="radio" name="distancia">À distância</span>
                </div>
            </div>

            <div class="item">
                <div>Àrea de atuação</div>
                <div><input type="text" name="area" placeholder='Informações das matérias que o professor pode lecionar'></div>
            </div>

            <button type="submit">Criar cadastrado</button>

        </section>
    </form>

{% endblock content %}