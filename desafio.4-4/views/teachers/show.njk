{% extends "layout.njk" %}

{% block content %}

  <div class="card">
    <section class="image" style='background: url({{ teacher.avatar_url }})
    no-repeat center center / cover'></section>
    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Nome completo</div>
        <div>{{teacher.name}}</div>
      </div>
      <div class="item">
        <div>Idade</div>
        <div>{{teacher.age}}</div>
      </div>
      <div class="item">
        <div>Grau de escolaridade</div>
        <div>{{teacher.graduation}}</div>
      </div>
      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <span>{{"Ã€ distancia" if teacher.distancia == "on" else "Presencial"}}</span>
        </div>
      </div>
      <div class="item">
        <div>Acompanhamento</div>
        <div>
          {% for areas in teacher.area %}
            <span>{{areas}}</span>
          {% endfor %}
        </div>
      </div>
      <div class="item">
        <div>Desde</div>
        <div>{{teacher.created_at}}</div>
      </div>

      <a href="#" class="button">Editar</a>
    </section>
  </div>

{% endblock content %}