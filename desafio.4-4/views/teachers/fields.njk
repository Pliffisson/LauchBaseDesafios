<div class="item">
    <div>Avatar_url</div>
    <div>
        <input type="url" name="avatar_url" placeholder='http://' value="{{teacher.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Professor(a)</div>
    <div>
        <input type="text" name="name" placeholder='Nome completo' value="{{teacher.name}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{teacher.birth}}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="grau">
            <option value="Escolha" {% if teacher.grau == "Escolha" %} {% endif %}>Escolha uma escolaridade</option>
            <option value="Médio" {% if teacher.grau == "Médio" %} {% endif %}>Ensino Médio Completo</option>
            <option value="Superior" {% if teacher.grau == "Superior" %} {% endif %}>Ensino Superior Completo</option>
            <option value="Mestrado" {% if teacher.grau == "Mestrado" %} {% endif %}>Mestrado</option>
            <option value="Doutorado" {% if teacher.grau == "Doutorado" %} {% endif %}>Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span><input type="radio" name="distancia" value="P" {% if teacher.distancia == "P" %} checked="checked" {% endif %}>Presencial</span>
        <span><input type="radio" name="distancia" value="À" {% if teacher.distancia == "À" %} checked="checked" {% endif %}>À distância</span>
    </div>
</div>

<div class="item">
    <div>Àrea de atuação</div>
    <div><input type="text" name="area" placeholder='Informações das matérias que o professor pode lecionar' value="{{teacher.area}}"></div>
</div>

<button type="submit">Salvar cadastro</button>